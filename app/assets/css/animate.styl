

//Everything below is example code taken from
// http://flippinawesome.org/2013/08/05/animating-with-angularjs/


.animate-enter.ng-enter {
  -webkit-transition: 3s linear all; /* Safari/Chrome */
  -moz-transition: 3s linear all; /* Firefox */
  -o-transition: 3s linear all; /* Opera */
  transition: 3s linear all; /* IE10+ and Future Browsers */

  /* The animation preparation code */
  opacity: 0;
}

/*
 Keep in mind that you want to combine both CSS
 classes together to avoid any CSS-specificity
 conflicts
*/

.animate-enter.ng-enter.ng-enter-active {
   The animation code itself 
  opacity: 1;
}



