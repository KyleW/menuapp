.recipe
  display flex
  flex-direction row
  padding 5px
  margin 5px auto
  background-color $color1
  width 90%
  height 80px

  .recipeName
    flex 4
    text-wrap normal
    margin: auto
    font-size: 1.1rem
    vertical-align center

  .recipeImage
    flex 1
    text-align left
    padding 5px 10px
    vertical-align center

.saveButton
  flex 1
  padding 5px
  margin: auto
  vertical-align center